{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/rowan-gud/pakk/refs/heads/main/schemas/pakk.mod.schema.json",
  "title": "Project",
  "description": "A project file for a pakk project",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "description": "The name of the project"
    },
    "bin": {
      "type": "object",
      "properties": {
        "sources": {
          "$ref": "#/$defs/Sources"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cmd": {
          "$ref": "#/$defs/Command"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "pkg": {
      "type": "object",
      "properties": {
        "sources": {
          "$ref": "#/$defs/Sources"
        },
        "pre": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "each": {
                "$ref": "#/$defs/Sources"
              },
              "run": {
                "$ref": "#/$defs/Command"
              },
              "generates": {
                "$ref": "#/$defs/Sources"
              }
            },
            "required": [],
            "additionalProperties": false
          }
        },
        "provides": {
          "type": "object",
          "properties": {
            "import": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": [],
          "additionalProperties": false
        }
      },
      "required": [],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["name"],
  "$defs": {
    "Command": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "Sources": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    }
  }
}
